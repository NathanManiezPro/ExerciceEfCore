@model ExerciceEfCore.Models.TodoTask

<h1>@(Model.Id == 0 ? "Ajoutez une nouvelle task" : "Modifier la Task")</h1>

<form asp-action="Save" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Titre" class="form-label">Titre</label>
        <input asp-for="Titre" class="form-control" />
        <span asp-validation-for="Titre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-check">
        <input asp-for="EstFini" class="form-check-input" />
        <label asp-for="EstFini" class="form-check-label">Fini</label>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save</button>
</form>

<a asp-action="Index" class="btn btn-secondary mt-3">Retourner a la Liste</a>
